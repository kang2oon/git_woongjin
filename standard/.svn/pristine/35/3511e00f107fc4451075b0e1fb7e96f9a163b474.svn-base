@charset "utf-8";

@import url('reset.css');
@import url('/inc/font/font.css');
@import url('/inc/font/font-awesome.css');

/* Common */
html, body{font-family:'Nanum Gothic';font-size:12px;margin:0;padding:0;line-height:180%;}
div{position:relative;}
ul, ol{list-style-position:inside;}
caption{display:none;}
pre{max-height:350px;font-family:verdana;font-size:12px;word-break:break-all;overflow:auto;}

.tborder{border:1px solid #ff0066;}
.noborder{border:none !important;}
.hidden_txt, .hidden{display:none;}
.fleft{float:left;}
.fright{float:right;}
.txtimportant{color:#ff0000;}
.txtcenter{text-align:center;}
.txtstrong{font-weight:700;}
.mgtop5{margin-top:5px;}
.mgtop20{margin-top:20px;}
.width680{width:680px;}
.width700{width:700px;}
.typeA{list-style-type: upper-alpha;}
.typei{list-style-type:lower-roman;}
.list_step2{margin-left:20px;margin-bottom:15px;}
.list_step3{margin-left:10px;margin-bottom:15px;}

a:focus{border:1px dotted #ff0066;}

/* LayOut */
#skipNavi li { font-size:0; line-height:0; }
#skipNavi li a	{ display:block; width:100%; padding:10px 0; color:#fff; position:absolute; left:0; top:-100px; text-align:center; z-index:200; background:#FF8500; border:0 none;}
#skipNavi li a:active, #skipNavi li a:focus { top:0; font-weight:bold;font-size:16px;line-height:1.5; border-bottom:1px solid #fff;}

#gototop{position:fixed;bottom:15px;right:15px;font-size:40px;color:#ccc;width:38px;height:38px;overflow:hidden;}
	#gototop a{color:inherit;text-decoration:none;}
	
#wrap{width:100%;margin:0;padding:0;}

#header{width:100%;}
	#header h1{font-size:17px;padding:15px;font-weight:400;line-height:130%;color:#666;}
		#header h1 span{font-size:28px;font-weight:700;color:#000;}
		#header h1 .version{font-family:tahoma;font-size:10px;font-weight:400;color:#FF8500;}
	#header #menubar{
		width:100%;height:35px;
		border:1px solid #167daf;
		border-left:none;border-right:none;
		background: #2a8ebf;
		background: -webkit-gradient(linear, left top, left bottom, from(#3a9ecf), to(#2a8ebf));
		background: -moz-linear-gradient(top,  #3a9ecf,  #2a8ebf);
	}
		#header #menubar #gnb{margin:7px 0 0 15px;list-style:none;color:#fff;font-size:15px;}
		#header #menubar #gnb li{float:left;margin-right:35px;}
		#header #menubar #gnb a{color:inherit;text-decoration:none;}
		#header #menubar #gnb a:hover{font-weight:700;text-decoration:underline;}
		
#footer{border-top:1px solid #ccc;padding:15px;font-size:11px;color:#888;line-height:160%;}

#snb{float:left;width:180px;padding:15px;}
	#snb h2{font-size:15px;color:#2a8ebf;padding-bottom:5px;margin-bottom:10px;border-bottom:1px solid #2a8ebf;}
	#snb ul{list-style: none;margin-left:5px;}
	#snb a{color:inherit;text-decoration:none;}
	#snb a:hover{text-decoration:underline;}

#content{float:left;width:720px;min-height:500px;border-left:1px solid #ccc;padding:15px;}
	#content h2{font-size:18px;}
	#content h3{font-size:13px;}
	#content .list_type{list-style:none;}
	#content .info_box{border:1px solid #ccc;background:#f5f5f5;padding:10px;}
	#content .info_box a{color:inherit;text-decoration:none;}
	#content .info_box a:hover{text-decoration:underline;}

table{width:100%;border-collapse:collapse;margin:5px 0;}
th, td{border:1px solid #ccc;padding:3px 7px;vertical-align:middle;}
th{background:#666;color:#fff;}
tr:nth-child(even){background:#f5f5f5;}

.btn_showhide{position:absolute;left:50%;width:60px;margin-left:-30px;height:20px;bottom:-21px;border:1px solid #ccc;border-top:none;text-align:center;line-height:17px;background:#f5f5f5;}
.btn_showhide a{color:inherit;text-decoration:none;}
	
/* GNB, SNB Style */
#html_intro #gnb li, #html_summary #gnb li, #html_dtd #gnb li, #html_rule #gnb li, #html_write #gnb li
{color:#c6e8f8;}
#html_intro #gnb #gnb_html_intro, #html_summary #gnb #gnb_html_intro, #html_dtd #gnb #gnb_html_intro, #html_rule #gnb #gnb_html_intro,  #html_write #gnb #gnb_html_intro
{font-weight:700;color:#fff;}

#html_intro #snb #snb_html_intro,
#html_summary #snb #snb_html_summary,
#html_dtd #snb #snb_html_dtd,
#html_rule #snb #snb_html_rule,
#html_write #snb #snb_html_write
{font-weight: 700;color:#FF8500;}

